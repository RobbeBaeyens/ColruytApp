        <Button x:Name="btnToevoegen" Click="btnToevoegen_Click" Grid.Row="2" Content="Nieuwe gebruiker toevoegen" Background="#FFE26D1B" Foreground="White" FontSize="25" FontWeight="Bold" BorderBrush="White" Padding="20" Margin="20">
