<Window x:Class="Colruyt_WPF.Gebruikers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Colruyt_WPF"
        mc:Ignorable="d"
        Title="Colruyt boodschappenlijsten" Width="470" Height="820" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <Grid RenderTransformOrigin="0.51,0.651">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="ImgLogo" Source="images/colruytlogo.jpg" Margin="26,5,25.5,5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="180"/>
        <Rectangle Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="4" Fill="Black" Height="2"/>

        <ListView Grid.Row="1" Name="GebruikerLijst" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Click="btnGebruiker_Click" Grid.Column="0" Background="#fff" Foreground="#C16212" FontSize="30" FontWeight="Bold" Width="350" Height="70" BorderBrush="#C16212" BorderThickness="5" Padding="5" Margin="0 5 10 5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="280"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="T" HorizontalAlignment="left" HorizontalContentAlignment="Center" Background="#C16212" Foreground="#FFF" Width="50" Height="50">
                                    <Label.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="90"/>
                                        </Style>
                                    </Label.Resources>
                                </Label>
                                <Label Grid.Column="1" Content="{Binding}" Foreground="#C16212"/>
                            </Grid>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="?" Grid.Column="1" Background="{x:Null}" Foreground="#C16212" FontSize="25" Width="40" Height="40" BorderBrush="White" BorderThickness="0"/>
                        <Button Content="X" Grid.Column="2" Background="{x:Null}" Foreground="#C16212" FontSize="25" Width="40" Height="40" BorderBrush="White" BorderThickness="0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnToevoegen" Click="btnToevoegen_Click" Grid.Row="2" Content="Nieuwe gebruiker toevoegen" Background="#C16212" Foreground="White" FontSize="25" FontWeight="Bold" BorderBrush="White" Padding="20" Margin="20">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="16"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
