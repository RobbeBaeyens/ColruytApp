<Window x:Class="Colruyt_WPF.Categorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Colruyt_WPF"
        mc:Ignorable="d"
        Title="Categorie" Height="750" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Kies uit een categorie..." Grid.ColumnSpan="6" Grid.Column="3" FontSize="35" Margin="20" Foreground="Orange"/>

        <Button Grid.Column="1" Grid.Row="1" />
        <Image Source="images/cat_1.jpg"   Grid.Column="1" Grid.Row="1"/>
        <Button Grid.Column="2" Grid.Row="1" />
        <Image Source="images/cat_2.jpg"   Grid.Column="2" Grid.Row="1"/>
        <Button Grid.Column="3" Grid.Row="1" />
        <Image Source="images/cat_3.jpg"   Grid.Column="3" Grid.Row="1"/>
        <Button Grid.Column="4" Grid.Row="1" />
        <Image Source="images/cat_4.jpg"   Grid.Column="4" Grid.Row="1"/>
        <Button Grid.Column="5" Grid.Row="1" />
        <Image Source="images/cat_5.jpg"   Grid.Column="5" Grid.Row="1"/>
        <Button Grid.Column="6" Grid.Row="1" />
        <Image Source="images/cat_6.jpg"   Grid.Column="6" Grid.Row="1"/>

        <Button Grid.Column="1" Grid.Row="2" />
        <Image Source="images/cat_7.jpg"   Grid.Column="1" Grid.Row="2"/>
        <Button Grid.Column="2" Grid.Row="2" />
        <Image Source="images/cat_8.jpg"   Grid.Column="2" Grid.Row="2"/>
        <Button Grid.Column="3" Grid.Row="2" />
        <Image Source="images/cat_9.jpg"   Grid.Column="3" Grid.Row="2"/>
        <Button Grid.Column="4" Grid.Row="2" />
        <Image Source="images/cat_10.jpg"   Grid.Column="4" Grid.Row="2"/>
        <Button Grid.Column="5" Grid.Row="2" />
        <Image Source="images/cat_11.jpg"   Grid.Column="5" Grid.Row="2"/>
        <Button Grid.Column="6" Grid.Row="2" />
        <Image Source="images/cat_12.jpg"   Grid.Column="6" Grid.Row="2"/>

        <Button Grid.Column="1" Grid.Row="3" />
        <Image Source="images/cat_13.jpg"   Grid.Column="1" Grid.Row="3"/>
        <Button Grid.Column="2" Grid.Row="3" />
        <Image Source="images/cat_14.jpg"   Grid.Column="2" Grid.Row="3"/>
        <Button Grid.Column="3" Grid.Row="3" />
        <Image Source="images/cat_15.jpg"   Grid.Column="3" Grid.Row="3"/>
        <Button Grid.Column="4" Grid.Row="3" />
        <Image Source="images/cat_16.jpg"   Grid.Column="4" Grid.Row="3"/>
        <Button Grid.Column="5" Grid.Row="3" />
        <Image Source="images/cat_17.jpg"   Grid.Column="5" Grid.Row="3"/>
        <Button Grid.Column="6" Grid.Row="3" />
        <Image Source="images/cat_18.jpg"   Grid.Column="6" Grid.Row="3"/>
    </Grid>
</Window>
